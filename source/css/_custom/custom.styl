// Custom styles.
body {
    font-family: 'Avenir', Helvetica, Arial, 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizelegibility;
    height: 100%;
    color: #777;
    background-color: white;
    //background-color: #f9f9f9;
    justify-content: justify;
}

a {
    color: #777;
}

.header {
    height: 60px;
    background-color: #545c64;
}

.header-inner {
    height: 100%;
    padding: 0;
}

.site-nav {
    height: 100%;
}

.brand,
.brand:hover {
    color: #ffd04b;
}

.logo-line-before, .logo-line-after {
    display: none;
}

.site-meta .site-title {
    font-size: 29px;
    font-weight: 500;
    height: 60px;
    line-height: 60px;
}

.menu {
    margin: 0;
}

.menu .menu-item {
    height: 60px;
    line-height: 60px;
}

.menu .menu-item a {
    height: 56px;
    line-height: 56px;
    font-size: 14px;
    text-align: center;
    color: #fff;
    padding: 0 20px;
    margin: 0;
    border-top: 2px solid transparent;
    border-bottom: 2px solid transparent;
    border-radius: 0;
}

.menu .menu-item a:hover,
.menu .menu-item-active a {
    color: #ffd04b;
    background-color: rgb(67, 74, 80);
    border-bottom: 2px solid #ffd04b;
}

.posts-expand .post-title {
    font-size: 25px;
    font-weight: 300;
    margin-bottom: 0;
}

.posts-expand .post-title-link {
    line-height: 1.4;
}

.posts-expand .post-title-link::before {
    height: 1px;
}

.posts-expand .post-title, 
.posts-expand .post-meta {
    text-align: center;
}


.posts-expand .post-meta {
    color: rgba(31, 31, 31, 0.5);
}

.posts-expand .post-body {
    font-size: 14px;
    text-align: justify;
}

.posts-expand .post-body img {
    padding: 0;
    border: none;
}

.post-button {
    text-align: right;
    margin-top: 0;
}

.post-button a {
    color: #777;
    border-bottom: 1px solid #777;
}

.comments {
    margin: 60px 0px 0;
}

.footer {
    //background-color: #fff;
    background-color: #f9f9f9;
}

.footer-inner {
    text-align: center;
}

.sidebar {
    background: #434a50;
    box-shadow: none;
}

.sidebar-inner,
.sidebar a {
    color: #f2f2f2;
}

.site-author-image {
    padding: 0;
    border: 2px solid #777;
}

.fancybox-skin {
    -webkit-border-radius: 0;
    -moz-border-radius: 0;
    border-radius: 0;
}

.local-search-popup,
.local-search-popup .local-search-header {
    border-radius: 0;
}

blockquote {
    line-height: 1.6;
    margin-bottom: 20px;
}

@media(max-width: 767px) {
    body {
        line-height: 1.8;
    }

    .main {
        padding-bottom: 0;
    }

    .main-inner {
        margin-top: 65px;
        padding-bottom: 80px;
    }

    .header {
     height: 45px;
    }

    .site-meta .site-title {
        font-size: 23px;
        height: 45px;
        line-height: 45px;
    }

    .header {
        width: 100%;
        position: fixed;
        top: 0;
        z-index: 9998;
    }

    .site-nav-toggle {
        display: none;
    }

    .site-nav {
        width: 100%;
        height: 45px;
        display: inline-block;
        background-color: #545c64;
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 9998;
        border-top: none;
    }

    .menu .menu-item {
        width: 20%;
        height: 45px;
        line-height: 45px;
        display: block;
        float: left;
    }

    .menu .menu-item a {
        height: 41px;
        line-height: 41px; 
    }

    .content-wrap {
        padding: 0;
        margin-top: 60px;
    }

    .posts-expand {
        margin: 0 15px;
    }

    .pagination {
        margin-top: 40px;
    }

    .comments {
        margin: 60px 15px 0;
    }

    .footer {
        display: none;
    }

    .page-home .post {
        margin-top: 20px;
        text-align: justify;
    }

    .page-home .post-title {
        text-align: left;
        font-size: 18px;
        font-weight: 400;
        margin: 20px 0 5px 0;
    }

    .page-home .post-title .post-title-link {
        color: #555;
    }

    .page-home .post-meta-mobile {
        font-size: 12px;
        display: block;
        text-align: right;
        margin: 2px 0 5px 0;
    }

    .page-home .post-meta-mobile a {
        border-bottom: none;
        text-decoration: underline;
    }

    .page-home .post-meta-desktop {
        display: none;
    }

    .page-home .post-meta-mobile .post-category,
    .page-home .post-meta-mobile .leancloud_visitors {
        margin-left: 10px;
    }

    .page-home .posts-expand .post-body {
        line-height: 1.6em;
    }

    .page-home .posts-expand .post-body p {
        margin: 0;
    }

    .page-home .posts-expand .post-body .group-picture {
        margin-bottom: 20px;
    }

    .page-home .posts-expand .post-body .fancybox img {
        margin-bottom: 5px;
    }

    .page-home .posts-expand .post-button {
        display: none;
    }

    .page-home .posts-expand .post-eof {
        width: 100%;
        height: 1px;
        margin: 0;
        background: none;
        display: block;
        border-bottom: 1px dashed #ddd;
    }



    .page-archive .posts-collapse {
        line-height: 2;
    }

    .page-archive .posts-collapse .post {
        margin: 20px 0;
    }

    .page-archive .posts-collapse .post-meta {
        top: 3px;
        left: 10px;
    }

    .page-archive .posts-collapse .post-title {
        font-size: 14px;
        margin-left: 50px;
    }



    .page-post-detail .post {
        text-align: justify;
    }  

    .page-post-detail .post .post-title {
        font-size: 18px;
        font-weight: 400;
    }

    .page-post-detail .post .post-meta {
        margin-bottom: 30px;
    } 
}

@media(min-width: 768px) and (max-width: 991px) {
    .header-inner,
    .main-inner {
        width: 700px;
    } 
}

@media(min-width: 992px) {
    .site-nav {
        margin-right: -30px;
    }

    .page-home .post-meta-desktop {
        display: block;
    }

    .page-home .post-meta-mobile {
        display: none;
    }

    .post-meta .post-meta-item-icon {
        display: none;
    }
}
