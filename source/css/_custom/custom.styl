// Custom styles.
body {
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizelegibility;
    height: 100%;
    color: #777;
    background-color: #f9f9f9;
}

a {
    color: #777;
}

.header {
    height: 60px;
    background-color: #545c64;
}

.header-inner {
    height: 100%;
    padding: 0;
}

.site-nav {
    height: 100%;
}

.brand,
.brand:hover {
    color: #ffd04b;
}

.logo-line-before, .logo-line-after {
    display: none;
}

.site-meta .site-title {
    font-size: 29px;
    font-weight: 500;
    height: 60px;
    line-height: 60px;
}

.menu {
    margin: 0;
}

.menu .menu-item {
    height: 60px;
    line-height: 60px;
}



.menu .menu-item a {
    height: 58px;
    line-height: 58px;
    font-size: 14px;
    color: #fff;
    padding: 0 20px;
    margin: 0;
    border-bottom: 2px solid transparent;
}

.menu .menu-item a:hover {
    background-color: rgb(67, 74, 80);
    border-radius: 0;
    border-bottom-color: #ffd04b;
    border-bottom: 2px solid #ffd04b;
}

.posts-expand .post-title {
    font-size: 25px;
    font-weight: 300;
    margin-bottom: 0;
}

.posts-expand .post-title-link::before {
    height: 1px;
}

.posts-expand .post-title, 
.posts-expand .post-meta {
    text-align: center;
}


.posts-expand .post-meta {
    color: rgba(31, 31, 31, 0.5);
}

.posts-expand .post-body {
    font-size: 14px;
}

.post-button {
    text-align: right;
    margin-top: 0;
}

.post-button a {
    color: #777;
    border-bottom: 1px solid #777;
}

.comments {
    margin: 60px 0px 0;
}

.footer-inner {
    text-align: center;
}

@media(max-width: 767px) {
    body {
        line-height: 1.8;
    }

    .main-inner {
        margin-top: 40px;
    }

    .header {
     height: 45px;
    }

    .site-meta .site-title {
        font-size: 23px;
        height: 45px;
        line-height: 45px;
    }

    .header {
        width: 100%;
        position: fixed;
        top: 0;
        z-index: 999;
    }

    .site-nav-toggle {
        display: none;
    }

    .site-nav {
        width: 100%;
        height: 45px;
        display: inline-block;
        background-color: #545c64;
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 999;
    }

    .menu .menu-item {
        width: 20%;
        height: 45px;
        line-height: 45px;
        display: block;
        float: left;
    }

    .menu .menu-item a {
        height: 43px;
        line-height: 43px;
        text-align: center;
        border-bottom: 2px solid transparent;
        padding: 0;
    }

    .menu .menu-item a:hover {
        background-color: rgb(67, 74, 80);
        border-radius: 0;
        border-bottom-color: #ffd04b;
        border-bottom: 2px solid #ffd04b;
    }

    .content-wrap {
        padding: 0;
        margin-top: 60px;
    }

    .posts-expand {
        margin: 0 15px;
    }

    .comments {
        margin: 60px 15px 0;
    }

    .page-home .post {
        margin-top: 20px;
        text-align: justify;
    }

    .page-home .post-title {
        text-align: left;
        font-size: 18px;
        font-weight: 300;
        margin: 20px 0 0;
    }

    .page-home .post-title .post-title-link {
        color: #555;
    }

    .page-home .post-meta {
        font-size: 10px;
        text-align: left;
        margin: 0 0 10px 0;
    }

    .page-home .post-meta .post-meta-divider {
        display: none;
    }

    .page-home .post-meta .post-category,
    .page-home .post-meta .leancloud_visitors {
        margin-left: 10px;
    }

    .page-home .posts-expand .post-body {
        line-height: 1.6em;
    }

    .page-home .post-button {
        display: none;
    }

    .page-home .posts-expand .post-eof {
        width: 100%;
        height: 1px;
        margin: 0;
        background: none;
        display: block;
        border-bottom: 1px dashed #ddd;
    }


    

    .page-post-detail .post-title {
        font-size: 18px;
    }

    .page-post-detail .post-meta {
        margin-bottom: 30px;
    }

    .page-post-detail .post {
        text-align: justify;
    }

    .posts-collapse .post {
        margin: 20px 0;
    }

    .posts-collapse .post-title {
        font-size: 14px;
    }

    .posts-collapse .post-meta {
        top: 3px;
    }
}

@media(min-width: 992px) {
    .site-nav {
        margin-right: -30px;
    }

    .page-home .post-meta .post-meta-item-icon {
        display: none;
    }
}
